%form{action: '/', method: 'post'}
  %fieldset
    %ul
      %li
        %label{for: 'confirmation'} Confirmation Code:
        %input{type: 'text', name: 'confirmation'}
      %li
        %label{for: 'first_name'} First Name:
        %input{type: 'text', name: 'first_name'}
      %li
        %label{for: 'last_name'} Last Name:
        %input{type: 'text', name: 'last_name'}
      %li
        %label{for: 'email'} Email:
        %input{type: 'text', name: 'email'}
      %li
        %label{for: 'flight_date'} Flight Date
        %input{type: 'text', id: 'datepicker', name: 'flight_date'}
      %li
        %label{for: 'flight_time'} Flight Time
        %input{type: 'text', id: 'timepicker', name: 'flight_time'}
      %li
        %label{for: 'departure_time_zone'} Departure Time Zone
        %select{name: 'departure_time_zone'}
          %option{value: '-0500'} Central
          %option{value: '-0700'} Pacific
          %option{value: '-0400'} Eastern
          %option{value: '-0600'} Mountain

      %input{type: 'submit', value: 'Auto Check Me In!', class: 'button'}
